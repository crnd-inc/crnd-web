<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="DynamicPopoverTemplate">
        <span t-attf-data-toggle="popover"
              t-attf-data-placement="left"
              t-attf-data-trigger="hover"
              t-attf-data-content="#{widget.value}"
              t-attf-style="max-width: #{widget.maxWidth}; -webkit-line-clamp: #{widget.lineClamp};"
              t-att-class="(widget.isIE === 'true' ? 'o_popover_widget_ie' : 'o_popover_widget') + ' o_field_text'"/>
    </t>
</templates>
