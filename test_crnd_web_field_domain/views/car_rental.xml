<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="car_rental_view_form" model="ir.ui.view">
        <field name="model">car.rental</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="car_id_field_domain"/>
                            <field name="car_id"
                                   domain="[('name', 'ilike', 'City')]"
                                   options="{'domain_field': 'car_id_field_domain'}"/>
                        </group>
                        <group>
                            <field name="rental_date"/>
                            <field name="return_date"/>
                            <field name="total_cost"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="car_rental_view_tree" model="ir.ui.view">
        <field name="model">car.rental</field>
        <field name="arch" type="xml">
            <tree>
                <field name="customer_id"/>
                <field name="car_id"/>
                <field name="rental_date"/>
                <field name="return_date"/>
                <field name="total_cost"/>
            </tree>
        </field>
    </record>

    <record id="car_rental_action" model="ir.actions.act_window">
        <field name="name">Car Rental</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">car.rental</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="test_crnd_web_field_domain.root"
              name="Rental"
              sequence="1"/>

    <menuitem id="car_rental_menu" name="Car Rental"
              parent="test_crnd_web_field_domain.root"
              action="test_crnd_web_field_domain.car_rental_action"
              sequence="10"/>
</odoo>
