<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<!--    Brands-->
    <record id='demo_brand_green_drive' model='car.rental.brand'>
        <field name="name">GreenDrive</field>
    </record>
    <record id='demo_brand_speed_tech' model='car.rental.brand'>
        <field name="name">SpeedTech</field>
    </record>
    <record id='demo_brand_city_wheels' model='car.rental.brand'>
        <field name="name">CityWheels</field>
    </record>
    <record id='demo_brand_comfort_cars' model='car.rental.brand'>
        <field name="name">ComfortCars</field>
    </record>
    <record id='demo_brand_trek_drive' model='car.rental.brand'>
        <field name="name">TrekDrive</field>
    </record>

    <!-- Fuel Types -->
    <record id='demo_fuel_petrol' model='car.rental.fuel_type'>
        <field name="name">Petrol</field>
    </record>
    <record id='demo_fuel_diesel' model='car.rental.fuel_type'>
        <field name="name">Diesel</field>
    </record>
    <record id='demo_fuel_electric' model='car.rental.fuel_type'>
        <field name="name">Electric</field>
    </record>
    <record id='demo_fuel_gasoline' model='car.rental.fuel_type'>
        <field name="name">Gasoline</field>
    </record>
    <record id='demo_fuel_hybrid_gasoline_electric' model='car.rental.fuel_type'>
        <field name="name">Hybrid (Gasoline/Electric)</field>
    </record>

    <!-- Transmission -->
    <record id='demo_transmission_automatic' model='car.rental.transmission'>
        <field name="name">Automatic</field>
    </record>
    <record id='demo_transmission_manual' model='car.rental.transmission'>
        <field name="name">Manual</field>
    </record>
    <record id='demo_transmission_robot' model='car.rental.transmission'>
        <field name="name">Robot</field>
    </record>

    <!-- Car models -->
    <record id='demo_model_eco' model='car.rental.model'>
        <field name="name">Eco200X</field>
        <field name="brand_id" ref='demo_brand_green_drive'/>
    </record>
    <record id='demo_model_sr_gt' model='car.rental.model'>
        <field name="name">SR-GT2023</field>
        <field name="brand_id" ref='demo_brand_speed_tech'/>
    </record>
    <record id='demo_model_ug' model='car.rental.model'>
        <field name="name">UG-H500</field>
        <field name="brand_id" ref='demo_brand_city_wheels'/>
    </record>
    <record id='demo_model_fc' model='car.rental.model'>
        <field name="name">FC2023</field>
        <field name="brand_id" ref='demo_brand_comfort_cars'/>
    </record>
    <record id='demo_model_adventure' model='car.rental.model'>
        <field name="name">AX-4x4</field>
        <field name="brand_id" ref='demo_brand_trek_drive'/>
    </record>

    <!-- Rental Cars -->
    <record id='demo_car_eco_cruiser' model='car.rental.car'>
        <field name="name">EcoCruiser</field>
        <field name="brand_id" ref='demo_brand_green_drive'/>
        <field name="model_id" ref='demo_model_eco'/>
        <field name="fuel_type_id" ref='demo_fuel_electric'/>
        <field name="transmission_id" ref='demo_transmission_automatic'/>
        <field name="year">2022</field>
        <field name="color">Sky Blue</field>
        <field name="rental_price">80.00</field>
    </record>
    <record id='demo_car_sport_rider' model='car.rental.car'>
        <field name="name">SportRider GT</field>
        <field name="brand_id" ref='demo_brand_speed_tech'/>
        <field name="model_id" ref='demo_model_sr_gt'/>
        <field name="fuel_type_id" ref='demo_fuel_gasoline'/>
        <field name="transmission_id" ref='demo_transmission_manual'/>
        <field name="year">2023</field>
        <field name="color">Racing Red</field>
        <field name="rental_price">120.00</field>
    </record>
    <record id='demo_car_urban_glyde' model='car.rental.car'>
        <field name="name">CityUrbanGlide Hybrid</field>
        <field name="brand_id" ref='demo_brand_city_wheels'/>
        <field name="model_id" ref='demo_model_ug'/>
        <field name="fuel_type_id" ref='demo_fuel_hybrid_gasoline_electric'/>
        <field name="transmission_id" ref='demo_transmission_automatic'/>
        <field name="year">2021</field>
        <field name="color">Midnight Black</field>
        <field name="rental_price">90.00</field>
    </record>
    <record id='demo_car_family_journey' model='car.rental.car'>
        <field name="name">CityFamilyJourney</field>
        <field name="brand_id" ref='demo_brand_comfort_cars'/>
        <field name="model_id" ref='demo_model_fc'/>
        <field name="fuel_type_id" ref='demo_fuel_diesel'/>
        <field name="transmission_id" ref='demo_transmission_automatic'/>
        <field name="year">2023</field>
        <field name="color">Pearl White</field>
        <field name="rental_price">100.00</field>
    </record>
    <record id='demo_car_adventure_explorer' model='car.rental.car'>
        <field name="name">CityAdventureXplorer</field>
        <field name="brand_id" ref='demo_brand_trek_drive'/>
        <field name="model_id" ref='demo_model_adventure'/>
        <field name="fuel_type_id" ref='demo_fuel_petrol'/>
        <field name="transmission_id" ref='demo_transmission_manual'/>
        <field name="year">2020</field>
        <field name="color">Forest Green</field>
        <field name="rental_price">110.00</field>
    </record>

    <!-- Rentals -->
    <record id='demo_rental_azure_interior' model='car.rental'>
        <field name="customer_id" ref='base.res_partner_12'/>
        <field name="car_id" ref='demo_car_eco_cruiser'/>
        <field name="rental_date" eval="(DateTime.today() - timedelta(days=10))"/>
        <field name="return_date" eval="(DateTime.today() - timedelta(days=9))"/>
    </record>
    <record id='demo_rental_ready_mat' model='car.rental'>
        <field name="customer_id" ref='base.res_partner_4'/>
        <field name="car_id" ref='demo_car_sport_rider'/>
        <field name="rental_date" eval="(DateTime.today() - timedelta(days=15))"/>
        <field name="return_date" eval="(DateTime.today() - timedelta(days=13))"/>
    </record>
    <record id='demo_rental_wood_corner' model='car.rental'>
        <field name="customer_id" ref='base.res_partner_1'/>
        <field name="car_id" ref='demo_car_urban_glyde'/>
        <field name="rental_date" eval="(DateTime.today() - timedelta(days=10))"/>
        <field name="return_date" eval="(DateTime.today() - timedelta(days=7))"/>
    </record>
    <record id='demo_rental_deco_addict' model='car.rental'>
        <field name="customer_id" ref='base.res_partner_2'/>
        <field name="car_id" ref='demo_car_family_journey'/>
        <field name="rental_date" eval="(DateTime.today() - timedelta(days=10))"/>
        <field name="return_date" eval="(DateTime.today() - timedelta(days=6))"/>
    </record>
    <record id='demo_rental_gemini_furniture' model='car.rental'>
        <field name="customer_id" ref='base.res_partner_3'/>
        <field name="car_id" ref='demo_car_adventure_explorer'/>
        <field name="rental_date" eval="(DateTime.today() - timedelta(days=10))"/>
        <field name="return_date" eval="(DateTime.today() - timedelta(days=5))"/>
    </record>

</odoo>
