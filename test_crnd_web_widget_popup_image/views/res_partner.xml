<odoo>
    <record id="test_crnd_web_widget_partner_tree" model="ir.ui.view">
        <field name="name">test.crnd.web.widget.res.partner.tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="before">
                <field name="image_1920" widget="image_popup"/>
                <field name="image_1024" widget="image_popup"/>
                <field name="image_512" widget="image_popup"/>
                <field name="image_256" widget="image_popup"/>
                <field name="image_128" widget="image_popup"/>
            </xpath>
        </field>
    </record>
    <record id="test_crnd_web_widget_partner_form" model="ir.ui.view">
        <field name="name">test.crnd.web.widget.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='image_1920']" position="replace">
                <field name="image_1920" widget="image_popup" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
            </xpath>
        </field>
    </record>
</odoo>
